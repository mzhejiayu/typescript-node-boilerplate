{
  "extends": ["tslint:recommended", "tslint-consistent-codestyle"],
  "rulesDirectory": [
  ],
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "semicolon": [true, "never"],
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": false,
    "ordered-imports": false,
    "no-empty": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "quotemark": [true, "double"],
    "no-console": [true, "log"],
    "object-literal-sort-keys": false,
    "early-exit": true,
    "no-return-undefined": true,
    "no-unused": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}